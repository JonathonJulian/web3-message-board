---
# This is a special YAMLlint configuration for Helm templates
# It focuses only on indentation and basic formatting, ignoring syntax issues

extends: default

rules:
  # Basic formatting checks
  indentation:
    spaces: 2
    indent-sequences: consistent
    check-multi-line-strings: false
  trailing-spaces: enable
  new-line-at-end-of-file: enable
  document-start: enable
  line-length:
    max: 300
    level: warning
  comments:
    min-spaces-from-content: 1

# Skip syntax checking entirely by explicitly ignoring these errors
ignore-from-file: .helmignore